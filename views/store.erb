<h2>Store: <%= @store.name() %></h2>
<hr>
<h3>Brand List</h3>
<% if @brands.any? %>
  <ol>
    <% @store.brands.each() do | brand | %>
      <li><%= brand.name() %></li>
    <% end %>
  </ol>
<% else %>
  <h4>No Brands at this time.</h4>
<% end %>
<hr>
<form action="/stores/<%= @store.id() %>/update" method="post">
  <button type="submit" class="btn-success">Update</button>
</form>
<hr>
<a href="/stores">Stores</a><br>
<a href="/">Home</a>
